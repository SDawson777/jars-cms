{
  "name": "nimbus-cms-monorepo",
  "private": true,
  "version": "1.0.0",
  "license": "UNLICENSED",
  "description": "Nimbus CMS monorepo: Studio (Vercel/Sanity), Admin SPA (Vercel/Vite), API (Railway/Express)",
  "author": "",
  "scripts": {
    "build": "echo 'Use workspace-specific builds: pnpm build:api, pnpm build:admin, pnpm --filter studio build'",
    "build:api": "pnpm --filter server build",
    "build:admin": "pnpm --filter admin build",
    "build:studio": "pnpm --filter studio build",
    "dev": "pnpm --filter server dev",
    "dev:api": "pnpm --filter server dev",
    "dev:admin": "pnpm --filter admin dev",
    "dev:studio": "pnpm --filter studio dev",
    "test": "vitest run",
    "fmt": "prettier -w .",
    "lint": "eslint server/src apps/admin/src --ext .ts,.tsx,.js,.jsx"
  },
  "devDependencies": {
    "@types/node": "^20.2.5",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/coverage-v8": "^4.0.0",
    "eslint": "^9.28.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vitest": "^4.0.10"
  },
  "prettier": {
    "semi": false,
    "printWidth": 100,
    "bracketSpacing": false,
    "singleQuote": true
  }
}
